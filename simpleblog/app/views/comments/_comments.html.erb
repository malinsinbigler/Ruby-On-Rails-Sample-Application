<h3>Comments:</h3>

<% if @post.comments.any? %>
	<% @post.comments.each do |comment| %>
		<div class="card mt-2">
			<p><strong><%= comment.username %></strong>: <%= comment.body %> 
			
			<%= link_to "[X]",
				post_comment_path(comment.post, comment),
				method: :delete,
				data: {confirm: 'Delete this comment?'},
				class: ''
			%>
			</p>
		</div>
	<% end %>
<% else %>
	<p>None</p>
<% end %>
<br>